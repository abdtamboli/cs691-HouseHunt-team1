pipeline {
    agent any
    environment {
        AWS_REGION = 'us-east-1'
        AWS_ACCOUNT_ID = '211125590005'
        REPO_NAME = 'househunt'
        SSH_PRIVATE_KEY_PATH = "/var/jenkins_home/.ssh/jenkins-key.pem"
    }
    stages {
        stage('Checkout Repository') {
            steps {
                checkout scm
            }
        }

        stage('Run NPM Tests (If Available)') {
            steps {
                script {
                    sh """
                    cd client
                    if [ -f package.json ] && grep -q '"test"' package.json; then
                        npm install
                        npm test
                    else
                        echo "No NPM tests found, skipping..."
                    fi
                    """
                }
            }
        }

        stage('Determine Docker Image Version') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    script {
                        sh "export AWS_REGION=${AWS_REGION}"
                        
                        def latest_version = sh(script: """
                            aws ecr list-images --repository-name ${REPO_NAME} --query 'imageIds[*].imageTag' --output text | sort -V | tail -n 1 || echo '1.0'
                        """, returnStdout: true).trim()

                        // Ensure latest_version is not null
                        if (!latest_version?.trim()) {
                            latest_version = "1.0"
                        }

                        // Handle cases where there's only one version
                        def version_parts = latest_version.tokenize('.')
                        def new_version

                        if (version_parts.size() == 2) {
                            new_version = version_parts[0] + '.' + (version_parts[1].toInteger() + 1)
                        } else {
                            new_version = "1.1"
                        }

                        env.DOCKER_VERSION = new_version
                        echo "New Docker Image Version: ${env.DOCKER_VERSION}"
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    script {
                        def image_tag = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}:${env.DOCKER_VERSION}"

                        sh """
                        cd client
                        export AWS_REGION=${AWS_REGION}
                        docker build -t ${image_tag} .
                        aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                        docker push ${image_tag}
                        echo "${image_tag}" > $WORKSPACE/docker_image_version.txt
                        """
                    }
                }
            }
        }

        stage('Terraform Apply - Create EC2 Server') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    script {
                        sh '''
                        cd client/terraform
                        export AWS_REGION=${AWS_REGION}
                        terraform init
                        terraform apply -auto-approve
                        mkdir -p /var/jenkins_home/.ssh
                        cp jenkins-key.pem /var/jenkins_home/.ssh/jenkins-key.pem
                        chmod 600 /var/jenkins_home/.ssh/jenkins-key.pem
                        '''
                    }
                }
            }
        }

        stage('Retrieve EC2 Public IP') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    script {
                        sh "cd client/terraform && terraform refresh"

                        def ec2_public_ip = sh(script: "cd client/terraform && terraform output -raw public_ip", returnStdout: true).trim()
                        env.EC2_PUBLIC_IP = ec2_public_ip
                        echo "EC2 Public IP: ${env.EC2_PUBLIC_IP}"
                    }
                }
            }
        }

        stage('Update Ansible Inventory') {
            steps {
                script {
                    sh """
                    echo "[frontend]" > client/ansible/inventory
                    echo "${EC2_PUBLIC_IP} ansible_user=ubuntu ansible_ssh_private_key_file=${SSH_PRIVATE_KEY_PATH}" >> client/ansible/inventory
                    """
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    script {
                        def image_tag = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}:${env.DOCKER_VERSION}"

                        sh """
                        export ANSIBLE_HOST_KEY_CHECKING=False
                        ssh-keyscan -H ${EC2_PUBLIC_IP} >> /var/jenkins_home/.ssh/known_hosts
                         ansible-playbook -i client/ansible/inventory client/ansible/deploy.yml \
                        --extra-vars "docker_image_version=${image_tag}"
                        """
                    }
                }
            }
        }
    }
}